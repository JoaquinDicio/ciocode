---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { Image } from "astro:assets";
import menu_icon from "../assets/menu.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header id="header" class="fixed text-white w-full bg-transparent">
      <nav class="flex justify-between px-12 py-5 items-center flex-wrap">
        <a href="#home"><h1 class="font-bold text-xl">Ciocode</h1></a>
        <button id="menu-btn" class="md:hidden"
          ><Image class="w-[30px]" src={menu_icon} alt="menu" /></button
        >
        <ul
          id="ul-nav"
          class="w-full md:w-auto justify-around gap-4 md:flex hidden"
        >
          <li class="font-medium text-center my-5 md:my-0">
            <a href="#home">Home</a>
          </li>
          <li class="font-medium text-center my-5 md:my-0">
            <a href="#beneficios">Beneficios</a>
          </li>
          <li class="font-medium text-center my-5 md:my-0">
            <a href="#proyectos">Proyectos</a>
          </li>
          <li class="font-medium text-center my-5 md:my-0">
            <a href="#contacto">Contacto</a>
          </li>
        </ul>
      </nav>
    </header>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");
  :root {
    --main-color: "#15151D";
  }
  * {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
    font-family: "Poppins", "Helvetica";
    scroll-behavior: smooth;
  }
  header.active {
    backdrop-filter: blur(150px);
    transition: 0.5s;
  }
</style>
<script>
  const ul = document.getElementById("ul-nav");
  const menu_btn = document.getElementById("menu-btn");
  const header = document.getElementById("header");

  //show menu on click
  menu_btn.addEventListener("click", () => {
    ul.classList.toggle("hidden");
    if (!header.classList.contains("active")) header.classList.toggle("active");
  });

  //change header in scroll
  window.addEventListener("scroll", () => {
    if (window.scrollY > 200) {
      header.classList.add("active");
    } else {
      header.classList.remove("active");
    }
  });
</script>
